# Backend Environment Configuration
# Copy this to .env and update with your actual values

# Database
DATABASE_URL="postgresql://evently_user:evently_pass@localhost:5433/evently_db?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production-make-it-very-strong"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=4000
NODE_ENV="development"
API_URL="http://localhost:3001"

# Email Service Configuration
# Choose your email service provider:

# Option 1: Gmail (recommended for development)
EMAIL_SERVICE="gmail"
EMAIL_USER="your-email@gmail.com"
EMAIL_APP_PASSWORD="your-gmail-app-password"

# Option 2: Ethereal (for testing - creates fake emails)
# EMAIL_SERVICE="ethereal"

# Option 3: SendGrid (recommended for production)
# EMAIL_SERVICE="sendgrid"
# SENDGRID_API_KEY="your-sendgrid-api-key"

# Option 4: Mailgun (alternative production option)
# EMAIL_SERVICE="mailgun"
# MAILGUN_SMTP_LOGIN="your-mailgun-login"
# MAILGUN_SMTP_PASSWORD="your-mailgun-password"

# Option 5: Custom SMTP
# EMAIL_SERVICE="custom"
# SMTP_HOST="smtp.your-provider.com"
# SMTP_PORT="587"
# SMTP_SECURE="false"
# SMTP_USER="your-smtp-user"
# SMTP_PASSWORD="your-smtp-password"

# Email Settings
EMAIL_FROM_NAME="Evently"
EMAIL_FROM_ADDRESS="noreply@evently.com"

# Background Jobs
ENABLE_WORKERS="true"

# Push Notifications (VAPID Keys)
# Generate new keys with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY="your-vapid-public-key-here"
VAPID_PRIVATE_KEY="your-vapid-private-key-here"
VAPID_EMAIL="your-email@example.com"
